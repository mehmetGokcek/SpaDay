<h1>User Records</h1>

<p>
    <a asp-controller="User" asp-action="Add">Add User</a>
</p>
<p>
    <a asp-controller="Spa" asp-action="Index">Spa Menu</a>
</p>


@if (ViewBag.Users == null || ViewBag.Users.Count == 0  )
{
    <p>No users yet!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Password</th>
                <th scope="col">Date Joined</th>

            </tr>
        </thead>
        <tbody>

            @{int count = 0;
                foreach (var user in ViewBag.Users)
                {
                    count++;
                        <tr>
                            <th>@count</th>
                            <th>@user.UserName</th>
                            <td>@user.Email</td>
                            <td>@user.Password</td>
                            <td>@user.Now</td>


                        </tr>
                }
            }
        </tbody>
    </table>
}